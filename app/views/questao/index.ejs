<%-include('../template/header-sidebar') %> 
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Gerenciar Questões</h1>
                    </div>
                    <!-- Content Row -->
                    <div class="row">
                        <div class="col-6">
                        <table class="table table-striped">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Descrição</th>
                                <th scope="col">Ativo?</th>
                                <th scope="col">Ações</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% questoes.forEach(function(questao){ %>
                                <tr>
                                  <td><%-questao.id  %></td>
                                  <td><%-questao.descricao %></td>
                                  <td><%-questao.ativo %></td>
                                  <td>
                                    <a class="btn btn-primary" href="/questao/edit/<%-questao.id  %>"><i class="bi bi-pencil-square"></i></a>  
                                    <a class="btn btn-danger" href="/questao/destroy/<%-questao.id  %>"><i class="bi bi-trash"></i></a> 
                                  </td>
                                </tr>
                              <% }); %>
                            </tbody>
                          </table>
                          </div>
                    </div> <!-- Content Row -->

                </div><!-- /.container-fluid -->
                

            </div>
            <!-- End of Main Content -->

           
<%-include('../template/footer') %> 